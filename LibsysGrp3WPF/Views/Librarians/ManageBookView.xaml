<UserControl x:Class="LibsysGrp3WPF.Views.ManageBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:LibsysGrp3WPF.Views"
             mc:Ignorable="d" >

        <Grid>
        <StackPanel Orientation="Vertical" Margin="0 20 0 0">

            <!--#region Pop up for editing a book-->
            <materialDesign:DialogHost>
                <materialDesign:DialogHost.DialogContent>
                    <StackPanel  Width="400" Margin="10">

                        <StackPanel >
                            <TextBlock>Titel</TextBlock>
                            <TextBox Text="{Binding TxBEditTitel}"/>
                            <TextBlock>Objekt typ</TextBlock>
                            <TextBox Text="{Binding TxBEditItemType}"/>
                            <TextBlock>ISBN</TextBlock>
                            <TextBox Text="{Binding TxBEditISBN}"/>
                            <TextBlock>Författare</TextBlock>
                            <TextBox Text="{Binding TxBEditAuthor}"/>
                            <TextBlock>Förlag</TextBlock>
                            <TextBox Text="{Binding TxBEditPublisher}"/>
                            <TextBlock>Kategori</TextBlock>
                            <TextBox Text="{Binding TxBEditCategory}"/>
                            <TextBlock>Sidor</TextBlock>
                            <TextBox Text="{Binding TxBEditPages}"/>
                            <TextBlock>Inköpris</TextBlock>
                            <TextBox Text="{Binding TxBEditPrice}"/>
                            <TextBlock>Beskrivning</TextBlock>
                            <TextBox Text="{Binding TxBEditDescription}"/>
                        </StackPanel>
                        <StackPanel Margin="50 10 50 0">
                            <Button Margin="0 0 0 10" Command="{Binding BtnAddBook}" Background="#F9A20B" BorderBrush="#F9A20B">Ändra</Button>
                            <Button Command="materialDesign:DialogHost.CloseDialogCommand">AVBRYT</Button>
                        </StackPanel>

                    </StackPanel>

                </materialDesign:DialogHost.DialogContent>

                <!--#region ScrollView for books-->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" HorizontalAlignment="Center"  Grid.RowSpan="3">
                <ItemsControl  ItemsSource="{Binding BooksList, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <!--SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}-->
                            <DataTemplate> 
                                <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}">
                                    <StackPanel>
                                        <Expander HorizontalAlignment="Stretch" Header="Titel" FontWeight="Bold">
                                            <StackPanel Orientation="Vertical" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Margin="24,8,24,16">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Objekt:" Margin="0 10 5 10"/>
                                                    <TextBlock Text="{Binding ItemType}" Margin="0 10 5 10"/>
                                                    <TextBlock Text="ISBN:" Margin="0 10 5 10"/>
                                                    <TextBlock Text="{Binding ISBN}" Margin="0 10 200 10"/>
                                                    <Button Content="Förändra" Background="#F9A20B" BorderBrush="#F9A20B" Margin="0 0 20 0"
                                                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"/>
                                                    <Button Content="Ta bort" Background="#F9A20B" BorderBrush="#F9A20B"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Författare:" Margin="0 0 5 10"/>
                                                    <TextBlock Text="{Binding Author}" Margin="0 0 5 10"/>
                                                    <TextBlock Text="Förlag:" Margin="0 0 5 10"/>
                                                    <TextBlock Text="{Binding Publisher}" Margin="0 0 0 10"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Kategori:" Margin="0 0 5 10"/>
                                                    <TextBlock Text="{Binding Category}" Margin="0 0 5 10"/>
                                                    <TextBlock Text="Sidor:" Margin="0 0 5 10"/>
                                                    <TextBlock Text="{Binding Pages}" Margin="0 0 5 10"/>
                                                    <TextBlock Text="Inköpris:" Margin="0 0 5 10"/>
                                                    <TextBlock Text="{Binding Price}" Margin="0 0 0 10"/>
                                                    <TextBlock Text="Datum:" Margin="5 0 5 10"/>
                                                    <TextBlock Text="{Binding Date}" Margin="0 0 0 10"/>
                                                </StackPanel>
                                                <TextBlock Text="Beskrivning" />
                                                <TextBlock
                                                  Opacity=".68"
                                                  Text="{Binding Description}"
                                                  TextWrapping="Wrap" />
                                            </StackPanel>
                                        </Expander>
                                        <Border Background="{DynamicResource MaterialDesignDivider}"
                                                  Height="1"
                                                  HorizontalAlignment="Stretch"
                                                  SnapsToDevicePixels="True" />
                       
                                        <Border
                                              Background="{DynamicResource MaterialDesignDivider}"
                                              Height="1"
                                              HorizontalAlignment="Stretch"
                                              SnapsToDevicePixels="True" />
                       
                                    </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                          </ItemsControl.ItemTemplate>
                        </ItemsControl>
            </ScrollViewer>
            <!--#endregion-->

            </materialDesign:DialogHost>
            
            <!--#endregion-->


            <!--#region Pop up for adding a book-->
            <materialDesign:DialogHost IsOpen="{Binding IsOpen}">
                <materialDesign:DialogHost.DialogContent>
                    <StackPanel  Width="400" Margin="10">

                        <StackPanel >
                            <TextBlock>Titel</TextBlock>
                            <TextBox Text="{Binding TxBAddTitel}"/>
                            <TextBlock>Objekt typ</TextBlock>
                            <TextBox Text="{Binding TxBAddItemType}"/>
                            <TextBlock>ISBN</TextBlock>
                            <TextBox Text="{Binding TxBAddISBN}"/>
                            <TextBlock>Författare</TextBlock>
                            <TextBox Text="{Binding TxBAddAuthor}"/>
                            <TextBlock>Förlag</TextBlock>
                            <TextBox Text="{Binding TxBAddPublisher}"/>
                            <TextBlock>Kategori</TextBlock>
                            <TextBox Text="{Binding TxBAddCategory}"/>
                            <TextBlock>Sidor</TextBlock>
                            <TextBox Text="{Binding TxBAddPages}"/>
                            <TextBlock>Inköpris</TextBlock>
                            <TextBox Text="{Binding TxBAddPrice}"/>
                            <TextBlock>Beskrivning</TextBlock>
                            <TextBox Text="{Binding TxBAddDescription}"/>
                        </StackPanel>
                        <StackPanel Margin="50 10 50 0">
                            <Button Margin="0 0 0 10" Command="{Binding BtnAddBook}" Background="#F9A20B" BorderBrush="#F9A20B">OK</Button>
                            <Button Command="materialDesign:DialogHost.CloseDialogCommand">AVBRYT</Button>
                        </StackPanel>

                    </StackPanel>

                </materialDesign:DialogHost.DialogContent>
    <!--#endregion-->
                
                <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center">
                <Button Content="Lägg till ny bok" Margin="10"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"/>
                <!--<Button Content="Lägg till e-bok" Margin="10"/>
                <Button Content="Lägg till film" Margin="10"/>-->
            </StackPanel>
            </materialDesign:DialogHost>

        </StackPanel>
    </Grid>

</UserControl>