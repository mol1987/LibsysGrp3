<Application x:Class="LibsysGrp3WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LibsysGrp3WPF"
             xmlns:views="clr-namespace:LibsysGrp3WPF.Views">

<Application.Resources>
    <DataTemplate DataType="{x:Type local:StartPageViewModel}">
        <views:StartPage/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:VisitorsProfilePageViewModel}">
        <views:VisitorsProfilePage/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:SuperUserHomePageViewModel}">
        <views:SuperUserHomePage/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:ManageVisitorsViewModel}">
        <views:ManageVisitorsView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type local:ManageLibrariansViewModel}">
         <views:ManageLibrariansView/>
     </DataTemplate>
     <DataTemplate DataType="{x:Type local:ManageSuperUserViewModel}">
         <views:ManageSuperUserView/>
     </DataTemplate>
     <DataTemplate DataType="{x:Type local:ReportsViewModel}">
         <views:ReportsView/>
     </DataTemplate>
        <DataTemplate DataType="{x:Type local:LibrariansHomePageViewModel}">
            <views:LibrariansHomePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ManageBookPageViewModel}">
            <views:BooksPageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ManageEbookPageViewModel}">
            <views:EbooksPageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ManageSeminarPageViewModel}">
            <views:SeminarPageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:AddLibrarianViewModel}">
            <views:AddLibrarianView/>
        </DataTemplate>


        <Style TargetType="Button" x:Key="navButton" >
         <Setter Property="Margin" Value="15"/>
          <Setter Property="FontSize" Value="35"/>
      </Style>
    </Application.Resources>
</Application>